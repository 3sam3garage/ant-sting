{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/api/src",
  "compilerOptions": {
    "builder": "tsc",
    "deleteOutDir": true,
    "tsConfigPath": "apps/api/tsconfig.app.json",
    "webpack": false
  },
  "monorepo": true,
  "root": "apps/api",
  "projects": {
    "batch": {
      "type": "application",
      "root": "apps/batch",
      "entryFile": "main",
      "sourceRoot": "apps/batch/src",
      "compilerOptions": {
        "tsConfigPath": "apps/batch/tsconfig.app.json"
      }
    },
    "agent": {
      "type": "application",
      "root": "apps/agent",
      "entryFile": "main",
      "sourceRoot": "apps/agent/src",
      "compilerOptions": {
        "tsConfigPath": "apps/agent/tsconfig.app.json"
      }
    },
    "consumer": {
      "type": "application",
      "root": "apps/consumer",
      "entryFile": "main",
      "sourceRoot": "apps/consumer/src",
      "compilerOptions": {
        "tsConfigPath": "apps/consumer/tsconfig.app.json"
      }
    },
    "common": {
      "type": "library",
      "root": "libs/shared/common",
      "entryFile": "index",
      "sourceRoot": "libs/shared/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/shared/common/tsconfig.lib.json"
      }
    },
    "core": {
      "type": "library",
      "root": "libs/shared/core",
      "entryFile": "index",
      "sourceRoot": "libs/shared/core/src",
      "compilerOptions": {
        "tsConfigPath": "libs/shared/core/tsconfig.lib.json"
      }
    },
    "config": {
      "type": "library",
      "root": "libs/shared/config",
      "entryFile": "index",
      "sourceRoot": "libs/shared/config/src",
      "compilerOptions": {
        "tsConfigPath": "libs/shared/config/tsconfig.lib.json"
      }
    },
    "mongo": {
      "type": "library",
      "root": "libs/mongo",
      "entryFile": "index",
      "sourceRoot": "libs/mongo/src",
      "compilerOptions": {
        "tsConfigPath": "libs/mongo/tsconfig.lib.json"
      }
    },
    "redis": {
      "type": "library",
      "root": "libs/redis",
      "entryFile": "index",
      "sourceRoot": "libs/redis/src",
      "compilerOptions": {
        "tsConfigPath": "libs/redis/tsconfig.lib.json"
      }
    },
    "ai": {
      "type": "library",
      "root": "libs/ai",
      "entryFile": "index",
      "sourceRoot": "libs/ai/src",
      "compilerOptions": {
        "tsConfigPath": "libs/ai/tsconfig.lib.json"
      }
    },
    "external-api": {
      "type": "library",
      "root": "libs/external-api",
      "entryFile": "index",
      "sourceRoot": "libs/external-api/src",
      "compilerOptions": {
        "tsConfigPath": "libs/external-api/tsconfig.lib.json"
      }
    },
    "browser": {
      "type": "library",
      "root": "libs/browser",
      "entryFile": "index",
      "sourceRoot": "libs/browser/src",
      "compilerOptions": {
        "tsConfigPath": "libs/browser/tsconfig.lib.json"
      }
    },
    "domain": {
      "type": "library",
      "root": "libs/domain",
      "entryFile": "index",
      "sourceRoot": "libs/domain/src",
      "compilerOptions": {
        "tsConfigPath": "libs/domain/tsconfig.lib.json"
      }
    },
    "application": {
      "type": "library",
      "root": "libs/application",
      "entryFile": "index",
      "sourceRoot": "libs/application/src",
      "compilerOptions": {
        "tsConfigPath": "libs/application/tsconfig.lib.json"
      }
    }
  }
}
